<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Category Detail</title>
        <link rel="stylesheet" href="/supplierDetail.css">
    </head>
    <body>
        <h1><%= title %></h1>
        <% if (success_msg) { %>
            <div class="flash success"><%= success_msg %></div>
        <% } %>
            
        <% if (error_msg) { %>
            <div class="flash error"><%= error_msg %></div>
        <% } %>

        <div class="supplier-detail">
            <p><strong>Name:</strong> <%= category.name %></p>
            <p><strong>Description:</strong> <%= category.description %></p>
            <p><strong>Supplier ID:</strong> <%= category.supplier_id %></p>
        </div>
        <div class="btnx">
            <a href="/categories/edit/<%= category.category_id %>">Edit Category</a>
            <form action="/categories/delete/<%= category.category_id %>" method="POST">
                <button type="submit" onclick="return confirm('Everything in this category will be deleted. Are you sure you want to delete this Category?');">Delete Category</button>
            </form>
        </div>

        <h2>Car Parts</h2>
        <div class="dropdown">
            <button class="dropbtn">Choose Item â–¼</button>
            <div class="dropdown-content">
                <% parts.forEach((part) => { %>
                    <a href="/parts/details/<%= part.part_id %>"><%= part.name %></a>
                <% }) %>
            </div>
        </div>

        <a href="/parts/new?category_id=<%= category.category_id %>&name=<%= category.name %>" class="btn">New Item</a>
        <a href="/suppliers/details/<%= category.supplier_id %>" class="btn">Supplier details</a>

    </body>
</html>

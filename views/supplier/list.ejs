<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Supplier List</title>
        <link rel="stylesheet" href="/supplierList.css">
    </head>
    <body>
        <h1><%= title %></h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% suppliers.forEach(function(supplier) { %>
                    <tr>
                        <td><%= supplier.name %></td>
                        <td><%= supplier.email %></td>
                        <td><%= supplier.phone %></td>
                        <td>
                            <section class="btn">
                            <a href="/suppliers/details/<%= supplier.supplier_id %>">View</a>
                            <a href="/suppliers/edit/<%= supplier.supplier_id %>">Edit</a>
                            <form action="/suppliers/delete/<%= supplier.supplier_id %>" method="POST">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this supplier?');">Delete</button>
                            </form>
                            </section>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </body>
</html>